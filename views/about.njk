{%  extends "layout.njk" %} <!-- extendendo os arquivos da página layout. Ele irá juntar o que tem na página layout com o conteúdo do block content-->

{% block head %}

<title>Sobre - {{ about.name }}</title>

{% endblock %}

    {% block content %}  <!--Tudo que estiver dentro do block content  irá para a página layout-->

    <div id="wrapper">
        <img src="{{about.avatar_url}}"
            alt="Imagem de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <p>{{about.description}}</p>
    </div>

    <div id="links-footer" class="links ">

        {% for link in about.links %}
        <a href="{{ link .url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
        
    </div>

    {% endblock %}
